<h1>Listing utilisateurs</h1>

<table>
  <tr>
    <th>Nom</th>
    <th>Prenom</th>
    <th>Titre</th>
    <th>Numero telephone</th>
    <th>Numero cellulaire</th>
    <th>Courriel</th>
    <th>Message texte permis</th>
    <th>Niveau</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @utilisateurs.each do |utilisateur| %>
  <tr>
    <td><%= utilisateur.nom %></td>
    <td><%= utilisateur.prenom %></td>
    <td><%= utilisateur.titre %></td>
    <td><%= utilisateur.numero_telephone %></td>
    <td><%= utilisateur.numero_cellulaire %></td>
    <td><%= utilisateur.courriel %></td>
    <td><%= utilisateur.message_texte_permis %></td>
    <td><%= utilisateur.niveau %></td>
    <td><%= link_to 'Show', utilisateur %></td>
    <td><%= link_to 'Edit', edit_utilisateur_path(utilisateur) %></td>
    <td><%= link_to 'Destroy', utilisateur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

